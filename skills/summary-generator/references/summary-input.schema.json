{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "SummaryInput",
  "type": "object",
  "properties": {
    "start_date": {
      "type": "string",
      "format": "date"
    },
    "end_date": {
      "type": "string",
      "format": "date"
    },
    "timezone": {
      "type": "string"
    },
    "dataset_mode": {
      "type": "string",
      "enum": [
        "broker_group",
        "buyer_inquiry",
        "mixed"
      ]
    },
    "record_type_filter": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "inventory_listing",
          "buyer_requirement"
        ]
      }
    }
  },
  "required": [
    "start_date",
    "end_date"
  ],
  "additionalProperties": false
}
